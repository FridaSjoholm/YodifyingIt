{
  "manifest_version": 2,

  "name": "Yodafying it",
  "description": "This extension will transform all big headers (h1/h2) to yoda talk",
  "version": "1.0",

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "Yodify here!"
  },
  "permissions": [
   "activeTab",
   "tabs",
   "http://*/*",
   "https://*/*"
   ]

}
